      <input id="modalAmount" class="invest-input" placeholder="e.g. 50" type="number" min="1">
    </div>

    <div style="display:flex;gap:8px;justify-content:flex-end;margin-top:16px">
      <button class="ghost" id="cancelModal">Cancel</button>
